# TalkType Environment Variables
# Copy this file to .env and fill in your values

# Gemini API Key (required)
# Get your API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here
API_AUTH_TOKEN=choose_a_secret_value
ALLOWED_ORIGINS=http://localhost:5173
API_RATE_LIMIT=60
API_RATE_WINDOW_MS=60000
API_SESSION_TTL_MS=14400000
API_COOKIE_SECRET=replace_with_random_32_chars
API_COOKIE_SECURE=false
MAX_UPLOAD_BYTES=52428800

# Optional: Development settings
# VITE_DEBUG=false
# VITE_API_TIMEOUT=30000

# PostHog Analytics (optional)
# Get your project key from: https://app.posthog.com/project/settings
# VITE_POSTHOG_KEY=phc_your_project_key_here
# VITE_POSTHOG_HOST=https://app.posthog.com

# Square Payment Configuration
# Get your credentials from: https://developer.squareup.com/apps
# For development, use Sandbox credentials

# Production Square credentials
SQUARE_ACCESS_TOKEN=your_production_access_token_here
SQUARE_LOCATION_ID=your_production_location_id_here

# Sandbox/Development Square credentials
SQUARE_SANDBOX_ACCESS_TOKEN=your_sandbox_access_token_here
SQUARE_SANDBOX_LOCATION_ID=your_sandbox_location_id_here

# Square Application ID (public, used in frontend)
VITE_SQUARE_APP_ID=your_square_application_id_here
